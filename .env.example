# Contract Intelligence Agent - Environment Configuration
# Copy this file to .env and fill in your values

# LLM Provider (set to "mock" for testing without API keys)
LLM_MODE=mock

# Anthropic API Key (required when LLM_MODE=anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model Configuration
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./data/processed/chroma_db
CHROMA_COLLECTION_NAME=contract_clauses

# Data Configuration
SYNTHETIC_DATA_DIR=./data/synthetic
NUM_CONTRACTS=120

# Application Configuration
APP_TITLE=Contract Clause Intelligence Agent
APP_DESCRIPTION=AI-powered federal contract analysis using RAG
TOP_K_RESULTS=5
